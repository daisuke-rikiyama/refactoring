<% if logged_in? %>
  <div class="container message_board_form">
    <div class="col-md-8 col-md-offset-2">
      <div class="row">
          <div class="form-top">
              <h2>新規作成</h2>
          </div>
          <p><span class="title">Title</span></p>
          <%= form_for(message_board) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <div class="form-group">
                <%= f.hidden_field :item_id, value: item.id if item %>
            </div>
            <div class="form-group">
              <%= f.text_field :title, class: "form-control", placeholder: "input title" %>
            </div>
            <div class="submit-group">
            <%= f.submit "Post", class: "btn btn-primary" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
<% end %>