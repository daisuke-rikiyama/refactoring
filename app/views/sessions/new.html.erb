<% content_for :head do %>
  <title>Log in - Let's use</title>
  <meta name="description" content="ログインページ">
<% end %>

<div class="box">
  <h2 class="box-title" align="center">ログイン</h2>
  <div class="box-inner">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.text_field :email, class: "form-control", placeholder: "メールアドレス" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
        <%= link_to "(forget password?)", new_password_reset_path %>
      </div>
      <div class="form-group">
        <div class="checkbox inline">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %>
            <span>Remember me on this computer</span>
          <% end %>
        </div>
      </div>
      <div class="submit-group" align="center">
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
    <% end %>
    <div class="have_account" align="center">
      <%= link_to "アカウントをお持ちでない方", signup_url %>
    </div>
  </div>
</div>