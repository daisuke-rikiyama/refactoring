<header>
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fruid">
      <div class="navbar-inner">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false" >
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="logo">
            <%= link_to "Let's use", root_path, class: "navbar-brand" %>
          </div>
        </div>
        <!-- この部分に追加していく。 -->
        <div class="collapse navbar-collapse" id="navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <% unless logged_in? %>
              <li><%= link_to "新規登録", signup_path %></li>
              <li><%= link_to "ログイン", login_path %></li>
            <% else %>
              <li>
                <%= link_to new_item_path do %>
                  <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                  アイテムを追加
                <% end %>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                  <span class="gravatar">
                    <%= gravatar_for current_user , size: 20 %>
                  </span>
                  <%= current_user.name %>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "プロフィール" , current_user %>
                  </li>
                  <li role="separator" class="divider"></li>
                  <li>
                    <%= link_to "ログアウト" , logout_path, method: "delete" %>
                  </li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  Ranking <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "Haved Ranking" , ranking_have_path  %>
                  </li>
                  <li>
                    <%= link_to "Wanted Ranking", ranking_want_path %>
                  </li>
                </ul>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  MessageBoard <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <%= link_to "All MessageBoard" , message_boards_path  %>
                  </li>
                  <li>
                    <%= link_to "My MessageBoard", user_message_boards_path(user_id: current_user.id) if logged_in? %>
                  </li>
                </ul>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>