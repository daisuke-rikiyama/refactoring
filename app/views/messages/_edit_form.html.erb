<div class="container message_board_form">
  <div class="col-md-8 col-md-offset-2">
    <div class="row">
      <%= form_for(message , url: message_board_message_path(message_board_id: message_board.id, id: message.id)) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
          <%= f.hidden_field :message_board_id, value: message_board.id %>
        </div>
        <div class="form-group">
          <label>content</label>
          <%= f.cktext_area :content, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.text_field :video_url, class: "form-control", placeholder: "Input Youtube Page URL" %>
        </div>
        <div class="submit-group">
          <%= f.submit "Update", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
